<div class="form-group">
    <label for="uname">Имя:</label>
    <input type="text" class="form-control" id="uname" placeholder="Автор" name="uname" required>
</div>

<div class="form-group">
    <label for="email">Email:</label>
    <input type="email" class="form-control" id="email" placeholder="Email" name="email" required>
</div>

<div class="form-group">
    <label for="phone">Телефон:</label>
    <input type="tel" class="form-control" id="phone" placeholder="Телефон" name="phone"
                   pattern="[0-9]{3}-[0-9]{3}-[0-9]{2}-[0-9]{2}" required>
    <div class="small">Формат: 095-123-12-12</div>
</div>
